<h5 class="card-title">{{{ cfp.name }}}</h5>

<div class="bd-callout bd-callout-primary">
    {{{ cfp.intro }}}
</div>

<div class="alert alert-info">
    <p class="text-center m-b-0">Período para submissão de atividades:</p>
    <p class="text-center m-b-0">de <b>{{{ cfp.humanstartdate }}}</b> até <b>{{{ cfp.humanduedate }}}</b></p>
</div>

{{^hassubmissions}}
    <div class="alert alert-info">Você ainda não fez submissões de atividades para esse evento</div>
{{/hassubmissions}}
{{#hassubmissions}}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tipo</th>
            <th scope="col">Público alvo</th>
            <th scope="col">Trilha</th>
            <th scope="col">Título</th>
            <th scope="col">Status</th>
        </tr>
        </thead>
        <tbody>
            {{#submissions}}
                <tr>
                    <th scope="row">{{{ id }}}</th>
                    <td>{{{ type }}}</td>
                    <td>{{{ audience }}}</td>
                    <td>{{{ track }}}</td>
                    <td>{{{ title }}}</td>
                    <td><span class="badge badge-pill badge-{{{ statusclass }}}">{{{ status }}}</span></td>
                </tr>
            {{/submissions}}
        </tbody>
    </table>
{{/hassubmissions}}

{{#issubmissionavailable}}
    <div class="m-t-1">
        <a class="btn btn-primary" href="{{{config.wwwroot}}}/mod/cfp/submit.php?cfpid={{{cfp.id}}}">Enviar nova proposta de palestra</a>
    </div>
{{/issubmissionavailable}}

{{#canmanage}}
    <div class="m-t-1">
        <a class="btn btn-info" href="{{{config.wwwroot}}}/mod/cfp/manage.php?cfpid={{{cfp.id}}}"><i class="fa fa-cog"></i> Gerenciar propostas enviadas</a>
    </div>
{{/canmanage}}