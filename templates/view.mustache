<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h5 class="card-title">{{{ course.fullname }}} - {{{ quizcompare.name }}}</h5>
        </div>

        <div class="container-fluid">
            {{#haswarning}}
                <div class="alert alert-danger">{{{ warning }}}</div>
            {{/haswarning}}
            {{^haswarning}}
                <div class="row">
                    {{#quizes}}
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="card-title">
                                        <h5 class="card-title">{{{ name }}}</h5>
                                    </div>
                                    {{> mod_quizcompare/summary }}

                                    {{{ questions }}}
                                </div>
                            </div>
                        </div>
                    {{/quizes}}
                </div>
            {{/haswarning}}
        </div>
    </div>
</div>